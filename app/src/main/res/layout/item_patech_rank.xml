<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.capstone.patech_android.data.model.PatechRankData" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@{String.valueOf(data.rank)}"
            android:textAppearance="@style/TextAppearance.PatechComponents.Bold.16"
            android:textColor="@color/green_main"
            tools:text="12" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:text="@{data.nickname}"
            android:textAppearance="@style/TextAppearance.PatechComponents.Medium.16"
            android:textColor="@color/black"
            tools:text="가은" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:includeFontPadding="false"
            android:text="@{@string/price_format(data.price)}"
            android:textAppearance="@style/TextAppearance.PatechComponents.Medium.16"
            android:textColor="@color/black"
            tools:text="1111" />
    </LinearLayout>
</layout>
